# 服务器信息 （不需要使用密码，直接用ssh即可登录）
HK_server_ssh_user=root
HK_server_ssh_IP=101.32.14.89
#项目路径
HK_server_ssh_path=/www/wwwroot/new/weather/



# --- 天气交易策略参数 ---
# 回归模型权重 (Round(W1*OM + W2*MN + Bias))
STRATEGY_W1_OM=0.525
STRATEGY_W2_MN=0.450
STRATEGY_BIAS=0.0

# 避让区宽度 (X.5 +- Width)
STRATEGY_AVOIDANCE_WIDTH=0.3

# 买入确认：连续下降次数
STRATEGY_CONFIRM_DROPS=3

# 执行时间窗口 (伦敦本地时间)
STRATEGY_PEAK_HOUR_START=14.0
STRATEGY_PEAK_HOUR_END=15.5

# 最小反弹阈值 (超过此值则重置计时)
STRATEGY_REBOUND_THRESHOLD=0.1

# --- 高阶策略逻辑细化 ---
# 1. 预测值约束 (必选前提: 1H Forecast <= Current)
STRATEGY_REQUIRE_FORECAST_DROP=true

# 2. 多源共振逻辑 (NOAA, OM, MN)
# 至少有几个来源同时在下跌阶段
STRATEGY_MIN_RESONANCE_SOURCES=2
# 每个有效来源至少需要连续下跌几次 (采样点)
STRATEGY_MIN_DROPS_PER_SOURCE=1
# 跨源总计最小下跌次数 (例如 A跌1次, B跌2次, 总计3次)
STRATEGY_TOTAL_REQUIRED_DROPS=3
# 是否强制要求 NOAA 参与下跌
STRATEGY_REQUIRE_NOAA_DROP=false

# 3. 扩展时间窗口 (伦敦本地时间)
# 宽泛模式: 例如 12:00 - 18:00
STRATEGY_PEAK_HOUR_START=12.0
STRATEGY_PEAK_HOUR_END=18.0